{
  "name": "library",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "dependencies": {
    "@cap-js/hana": "^2",
    "@sap/cds": "^9",
    "@sap/xssec": "^4",
    "express": "^4"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^2",
    "@sap/cds-dk": "^9",
    "cds-plugin-ui5": "^0.13.0",
    "rimraf": "^5.0.5",
    "mbt": "^1.2.29"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-members": "cds watch --open members/index.html?sap-ui-xx-viewCache=false --livereload false",
    "undeploy": "cf undeploy library --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1",
    "watch-membersapp": "cds watch --open membersapp/index.html?sap-ui-xx-viewCache=false --livereload false",
    "watch-loanreturnapp": "cds watch --open loanreturnapp/index.html?sap-ui-xx-viewCache=false --livereload false"
  },
  "private": true,
  "cds": {
    "watch": {
      "exclude": [
        "node_modules/",
        "dist/",
        "db.sqlite",
        "*.log",
        ".vscode/",
        ".idea/"
      ]
    },
    "requires": {
      "db": {
        "kind": "sqlite",
        "model": [
          "db",
          "srv"
        ],
        "credentials": {
          "database": "db.sqlite"
        }
      },
      "auth": {
        "kind": "mocked",
        "users": {
          "adminuser1": {
            "password": "1234567",
            "roles": [
              "admin"
            ]
          }
        }
      },
      "[production]": {
        "auth": "xsuaa"
      },
      "messaging": {
        "kind": "enterprise-messaging"
      },
      "destinations": true,
      "html5-repo": true
    }
  },
  "workspaces": [
    "app/*"
  ],
  "sapux": [
    "app/members",
    "app/membersapp"
  ]
}